@model List<GadgetLocation>

@{
    ViewData["Title"] = "Locations";
}

<h2>Current Gadget Locations</h2>
<table class="table">
    <thead>
        <tr>
            <th>
                Location Name
            </th>
        </tr>
    </thead>
    @foreach (GadgetLocation gl in Model)
    {
        <tr>
            <td>
                @gl.Name
            </td>
        </tr>
    }
</table>

<h2>Add a new Location</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="HandleNewGadgetLocation">
            <div class="form-group">
                <label for="n" class="control-label">Location Name</label>
                <input name="n" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Add Location" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>
